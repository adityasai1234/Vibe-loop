rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // You might want to allow other file types for avatars, e.g. png
    // match /avatars/{userId}.png {
    //   allow read: if true;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
    // Consider adding rules for file size and content type validation
    // allow write: if request.auth != null && request.auth.uid == userId
    //              && request.resource.size < 5 * 1024 * 1024 // 5MB limit
    //              && request.resource.contentType.matches('image/.*');
  }
}